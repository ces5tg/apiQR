<%- include('../layouts/head.ejs') %>

    <body>
        <%- include('../layouts/sideBar.ejs') %>
                
        <div class="p-4 sm:ml-64">
            <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700">
                <div class="grid grid-cols-3 gap-2">
                    <div class="flex items-center justify-center rounded bg-gray-50 h-28 dark:bg-gray-800 col-span-1">
                        <p class="text-2xl text-gray-400 dark:text-gray-500">CRUD de Personas</p>
                    </div>
                    <div class="flex items-center justify-center w-full bg-gray-50 h-70 light:bg-gray-900 col-span-2">
                        <!-- Formulario para Crear Persona -->
                        <form id="personaForm"                            onsubmit="return submitPersonaForm()">
                            <input type="hidden" id="editId" name="_id">
                            <div class="grid grid-cols-3 gap-3">
                                <div class="grid grid-rows-2">
                                    <div>
                                        <label for="name" class="col-span-1 block text-sm font-medium text-gray-700">Nombre:</label>
                                        <input class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-9/12 p-2.5 dark:border-gray-600" type="text" name="name" id="personaName" required>
                                    </div>
                                    <div>
                                        <label for="password" class="col-span-1 block text-sm font-medium text-gray-700">Contraseña:</label>
                                        <input class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-9/12 p-2.5 dark:border-gray-600" type="password" name="user.password" id="personaPassword" required>
                                    </div>
                                </div>
                                <div class="grid grid-rows-2">
                                    <div>
                                        <label for="dni" class="col-span-1 block text-sm font-medium text-gray-700">DNI:</label>
                                        <input class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-9/12 p-2.5 dark:border-gray-600" type="text" name="dni" id="personaDNI" required>
                                    </div>       
                                    
                                    <div>
                                        <label for="rol" >Rol:</label>
                                        <select name="rol" id="personaRol" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5 light:bg-gray-700 light:border-gray-600 light:placeholder-gray-400 light:text-black light:focus:ring-blue-500 dark:focus:border-blue-500 w-9/12" required>
                                            <option value="admin">Admin</option>
                                            <option value="profesor">Profesor</option>
                                            <option value="otro">Otro</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="grid grid-rows-2">
                                    <div>
                                        <label for="email" class="col-span-1 block text-sm font-medium text-gray-700">Correo electrónico:</label>
                                        <input class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-9/12 p-2.5 dark:border-gray-600"type="email" name="user.email" id="personaEmail" required>
                                    </div>
                                    <div class="flex items-center">
                                        <div>
                                            <button class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-10/12 sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" type="submit">Crear Persona</button>
                                        </div>
                                        
                                    </div>
                                </div>
                                <div>

                                </div>
                            </div>
                            
                        </form>
                    </div>
                </div>  
                <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
                    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                            <tr>
                                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">Nombre</th>
                                <th scope="col" class="px-6 py-3">DNI</th>
                                <th scope="col" class="px-6 py-3">Rol</th>
                                <th scope="col" class="px-6 py-3">Email</th>
                                <th scope="col" class="px-6 py-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                                        </svg>
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0"/>
                                    </svg>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% personas.forEach(persona=> { %>
                                <tr class="bg-white dark:bg-gray-800">
                                    <!-- Detalles de Persona -->
                                    
                                    <td class="px-6 py-4"><a href="#" onclick="showPersonaDetails('<%= persona._id %>')">
                                            <%= persona.name %>
                                        </a></td>
                                    <td class="px-6 py-4">
                                        <%= persona.dni %>
                                    </td>
                                    <td class="px-6 py-4">
                                        <%= persona.rol %>
                                    </td>
                                    <td class="px-6 py-4">
                                        <%= persona.user.email %>
                                    </td>
                                    <!-- Enlace para Editar Persona -->
                                    
                                    <td class="px-6 py-4"><a href="#"
                                            onclick="showEditForm('<%= persona._id %>', '<%= persona.name %>', '<%= persona.dni %>', '<%= persona.rol %>','<%= persona.user.email %>', '<%= persona.user.password %>'); event.preventDefault();">Editar</a>
                                    </td>
                                    <!-- Botón para Eliminar Persona -->
                                    <td class="px-6 py-4">
                                        <button type="button"
                                            onclick="confirmDelete('<%= persona._id %>')">Eliminar</button>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
            <%- include('../layouts/footer.ejs') %>
        </div>
        <script src="/js/web/personas.js"></script>
    
    </body>

    </html>